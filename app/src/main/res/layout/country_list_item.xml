<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/countyFlag_IV"
        android:layout_width="67dp"
        android:layout_height="66dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/countryName_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:text="Country Name"
        android:textSize="20dp"
        android:textColor="@color/nevi_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/countyFlag_IV"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/capital_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Capital"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/countyFlag_IV"
        app:layout_constraintTop_toBottomOf="@+id/countryName_TV" />

    <TextView
        android:id="@+id/currencies_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Currencies"
        android:textSize="12dp"
        android:textColor="@color/green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.071"
        app:layout_constraintStart_toEndOf="@+id/countyFlag_IV"
        app:layout_constraintTop_toBottomOf="@+id/capital_TV"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>